@model List<GuitarPick.DataLayer.DataModels.Product>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<table>
    <tr>
        <th>Product Name</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
    </tr>
@foreach (var product in Model)
{
    using (Html.BeginForm("AddtoCart","Product"))
    {
    <tr>
        <td>@Html.Hidden("ProductID", product.ProductID) @product.ProductName</td>
        <td>@product.Description</td>
        <td>@product.Price</td>
        <td><button type="submit" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart</button></td>
    </tr>
    }
}
</table>
